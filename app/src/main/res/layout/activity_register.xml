<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#F4F5F5">

    <ImageView
        android:id="@+id/bbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/bbl1" />

    <ImageView
        android:id="@+id/lgLeft"
        android:layout_width="@dimen/_80mdp"
        android:layout_height="@dimen/_80mdp"
        android:layout_toStartOf="@+id/logo"
        android:layout_alignTop="@+id/logo"
        android:layout_marginEnd="-70dp"
        app:srcCompat="@drawable/ecl1" />

    <ImageView
        android:id="@+id/lgRgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/logo"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ecl2" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_120mdp"
        android:layout_below="@+id/bbl1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/rgst_logo" />

    <ImageView
        android:id="@+id/usernameRect"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40mdp"
        app:srcCompat="@drawable/btn_bg"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_20mdp"
        android:layout_marginEnd="@dimen/_20mdp"
        android:layout_marginTop="@dimen/_30mdp" />

    <EditText
        android:id="@+id/usernameTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:layout_alignBottom="@id/usernameRect"
        android:layout_alignStart="@+id/usernameRect"
        android:layout_alignRight="@id/usernameRect"
        android:layout_marginLeft="@dimen/_10mdp"
        android:layout_marginRight="@dimen/_5mdp"
        android:hint="Enter Username"
        android:textCursorDrawable="@null"
        android:textIsSelectable="true"
        android:cursorVisible="true"
        android:textColorHint="@color/gray">
    </EditText>

    <ImageView
        android:id="@+id/usernameImg"
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_alignRight="@+id/usernameRect"
        android:layout_alignBottom="@+id/usernameRect"
        android:layout_marginRight="@dimen/_10mdp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/usernameRect"
        android:layout_marginLeft="@dimen/_10mdp"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/emailRect"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40mdp"
        app:srcCompat="@drawable/btn_bg"
        android:layout_below="@+id/usernameRect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_20mdp"
        android:layout_marginEnd="@dimen/_20mdp"
        android:layout_marginTop="@dimen/_10mdp"
        />


    <EditText
        android:id="@+id/emailTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:layout_alignBottom="@id/emailRect"
        android:layout_alignStart="@+id/emailRect"
        android:layout_alignRight="@id/emailRect"
        android:layout_marginLeft="@dimen/_10mdp"
        android:layout_marginRight="@dimen/_5mdp"
        android:hint="Enter Email"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/gray">
    </EditText>

    <ImageView
        android:id="@+id/emailImg"
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_alignRight="@+id/emailRect"
        android:layout_alignBottom="@+id/emailRect"
        android:layout_marginRight="@dimen/_10mdp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/emailRect"
        android:layout_marginLeft="@dimen/_10mdp"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/pswrdRect"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40mdp"
        app:srcCompat="@drawable/btn_bg"
        android:layout_below="@+id/emailRect"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_alignLeft="@+id/lgn_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_20mdp"
        android:layout_marginEnd="@dimen/_20mdp"/>


    <EditText
        android:id="@+id/pswrdTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:layout_alignBottom="@id/pswrdRect"
        android:layout_alignLeft="@+id/pswrdRect"
        android:layout_alignRight="@id/pswrdRect"
        android:layout_marginLeft="@dimen/_10mdp"
        android:layout_marginRight="@dimen/_5mdp"
        android:hint="Enter Password"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/gray">
    </EditText>

    <ImageView
        android:id="@+id/pswrdImg"
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_alignRight="@+id/pswrdRect"
        android:layout_alignBottom="@+id/pswrdRect"
        android:layout_marginRight="@dimen/_10mdp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/pswrdRect"
        android:layout_marginLeft="@dimen/_10mdp"
        app:srcCompat="@drawable/padlock" />

    <Button
        android:id="@+id/rgstrBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pswrdRect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20mdp"
        android:text="Register"
        android:textAllCaps="false"
        android:fontFamily="@font/belgrano"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:background="@drawable/rgstr_btn_bg" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/usernameRect"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-40dp"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dp"
        android:layout_alignBottom="@+id/emailRect"
        app:srcCompat="@drawable/bbl4" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/bbl2" />

    <TextView
        android:id="@+id/rgstr2login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgstrBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Already an user? Click here to Login"
        android:textColor="@color/blue"
        android:textSize="14sp" />

</RelativeLayout>